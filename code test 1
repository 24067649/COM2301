import java.util.ArrayList;
import java.util.Collections;
import java.util.Comparator;
import java.util.List;
import java.util.Scanner;

class FinancialPlanner {
    public static double calculateTax (double grossIncome , double taxRate) {
        return grossIncome * (taxRate /100);
    }
    
    public static double calculateExpenditures (double[]expenditures) {
        double total = 0;
        for (double expenditure : expenditures) {
            total+= expenditure ;
        }
        return total;
    }
    
    public static double calculateHomeLoan(double purchasePrice,double deposit ,double interestRate , int months){
        double loanAmount = purchasePrice - deposit ; 
        double monthlyInterestRate = interestRate / 100 /12;
        return (loanAmount * monthlyInterestRate) / (1- Math.pow(1+monthlyInterestRate,-months));
    }
    
